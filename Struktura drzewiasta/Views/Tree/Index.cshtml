@model IList<Struktura_drzewiasta.Models.Node>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Struktura drzewiasta";
}

@functions{
    private void ShowTree(Node node)
    {
        <li>
            <label>
                @Html.RadioButton("Id", node.Id.ToString())
                @node.Id
                @node.Name
            </label>
            @Html.ActionLink("", "Delete", "Tree", new { id = node.Id }, new { @class = "bi bi-trash-fill text-decoration-none text-reset" })
        </li>
        @if (node.Children.Count != 0)
        {
            <ul class="">
                @foreach (var child in node.Children)
                {
                    ShowTree(child);
                }
            </ul>
        }
    }
}
<div class="d-flex">
    <div class="w-25">
        @using (Html.BeginForm("Create", "Tree", FormMethod.Post, new{ @class="d-flex flex-column" }))
        {
            <h3>Create</h3>
            <div class="d-flex flex-column">
                @Html.Label("Name", "Name: ")
                @Html.TextBox("Name","", "", new { @class="w-75" })
            </div>
            <div class="d-flex flex-column">
                @Html.Label("Parent", "Parent: ")
                @if (Model is not null)
                {
                    @Html.DropDownList("Parent", new SelectList(Model.Select(m=>m.Id + ". " + m.Name)), "Select parent", new { @class="w-75"})
                }
            </div>
            <input type="submit" class="w-75 mt-3"/>
        }
    </div>
    <div class="w-75">
        @if (Model.FirstOrDefault() is not null)
        {
            @using (Html.BeginForm("Edit", "Tree", null, FormMethod.Post, true, new { @class="d-flex flex-row"}))
            {
                <div class="w-25 d-flex flex-column">
                    <h3>Edit</h3>
                    @Html.Label("Name", "Name: ")
                    @Html.TextBox("Name")
                    @Html.Label("Parent", "Parent: ")
                    @Html.DropDownList("Parent", new SelectList(Model.Select(m=>m.Id + ". " + m.Name)), "Select parent")
                    <input type="submit" class="mt-3"/>
                </div>
                <div>
                    <ul>
                        @{ ShowTree(Model.First()); }
                    </ul>
                </div>
            }
        }
    </div>
</div>