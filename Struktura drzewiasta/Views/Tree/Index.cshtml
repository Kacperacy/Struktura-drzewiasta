@using Microsoft.AspNetCore.Html
@model IList<Struktura_drzewiasta.Models.Node>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Struktura drzewiasta";
}

@functions{
    private void ShowTree(Node node)
    {
        var children = Model.Where(n => n.ParentId == node.Id);

        @if (children.Any())
        {
            <li>
                @Html.DisplayFor(modelItem => node.Id)
                @Html.DisplayFor(modelItem => node.Name)
                @if (node.ParentId is not null)
                {
                    @Html.DisplayFor(modelItem => node.ParentId)
                }
            </li>
            <ul>
                @foreach (var child in children)
                {
                    ShowTree(child);
                }
            </ul>
        }
        else
        {
            <li>
                @Html.DisplayFor(modelItem => node.Id)
                @Html.DisplayFor(modelItem => node.Name)
                @if (node.ParentId is not null)
                {
                    @Html.DisplayFor(modelItem => node.ParentId)
                }
            </li>
        }
    }
}

@if (Model is not null)
{
    <ul>
        @{ ShowTree(Model[0]);}
    </ul>
}